    }

    fn level_1() -> Self {
        Level {
            platforms: vec![
                Platform::new(0.0, 550.0, 800.0, 50.0, [0.6, 0.4, 0.2, 1.0]), // Ground platform
                Platform::new(300.0, 300.0, 100.0, 20.0, [0.2, 0.8, 0.2, 1.0]), // Floating platform
